        <Label text="User Name"/>
        <TextField fx:id="textfield"/>
        <Button text="Connect"/>

        <GridPane>
            <children>
                <Label text="${textfield.text}" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
                <Button minWidth="150" text="Down" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button text="Further DOwn" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            </children>
        </GridPane>

    </children>
</HBox>